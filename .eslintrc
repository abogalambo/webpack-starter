{
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:react-redux/recommended"
	],
	"plugins": [
		"react",
		"react-redux",
		"react-hooks"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"env": {
		"node": true,
		"browser": true,
		"es6": true
	},
	"rules": {
		"eol-last": ["error", "always"],
		"no-unused-vars": ["error", { "ignoreRestSiblings": true }]
	},
	"settings": {
		"react": {
			"version": "detect", // automatically picks the version you have installed.
		}
	}
}
